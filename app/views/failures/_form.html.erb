<%= form_for(@failure) do |f| %>
  <% if @failure.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@failure.errors.count, "error") %> prohibited this failure from being saved:</h2>

      <ul>
      <% @failure.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :build_id %><br />
    <%= f.number_field :build_id %>
  </div>
  <div class="field">
    <%= f.label :test %><br />
    <%= f.text_field :test, :size => "70" %>
  </div>
  <div class="field">
    <%= f.label :ptfnd_url %><br />
    <%= f.text_field :ptfnd_url, :size => "160" %>
  </div>
  <div class="field">
    <%= f.label :exception_msg %><br />
    <%= f.text_area :exception_msg, :size => "130x3" %>
  </div>
  <div class="field">
    <%= f.label :stack_trace %><br />
    <%= f.text_area :stack_trace, :size => "130x20" %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes, :size => "130x10" %>
  </div>
  <div class="field">
    <%= f.label :is_user_visible %><br />
    <%= f.check_box :is_user_visible %>
  </div>

<h3>Linked resolution</h3>
<div id="resolution">
<% if @failure.resolution %>
<%= render @failure.resolution %>
<% else %>
No linked resolution. Create
<% end %>
</div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
